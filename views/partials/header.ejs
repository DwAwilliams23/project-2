  <body>
    <nav>
      <img src="/images/spatula.png">
      <a href="/" <%- title === 'Lets Cook' ? 'class="active"' : '' %>>Lets Cook</a>
      <a href="/recipes" <%- title === 'All Recipes' ? 'class="active"' : '' %>>Recipes</a>
      <% if (user) { %>
        <a href="/cuisines/index"	<%- title === 'Add Cuisine' ? 'class="active"' : '' %>>
